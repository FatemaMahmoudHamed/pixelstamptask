
@{

    bool isAdmin = Convert.ToBoolean(ViewBag.IsAdmin.ToString());
}
@if (isAdmin)
{
    <div class="container">
        <div class="btn-group mx-auto d-block" style="width:70%">
            <a asp-controller="Employees" class="btn btn-primary" asp-action="Index">Manage Employees</a>
            <a asp-controller="Contacts" class="btn btn-primary" asp-action="Index">Manage Contacts</a>
            <a asp-controller="User" class="btn btn-primary" asp-action="Index">Manage Users</a>
            <div class="btn-group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    Settings
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">Change Password</a>
                    <a class="dropdown-item" href="#">Change Profile</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="btn-group mx-auto d-block" style="width:60%">
            <a asp-controller="Contacts" class="btn btn-primary" asp-action="Index">My Contacts</a>
            <a asp-controller="Contacts" class="btn btn-primary" asp-action="Create">Add New Contact</a>
            <div class="btn-group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    Settings
                </button>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">Change Password</a>
                    <a class="dropdown-item" href="#">Change Profile</a>
                </div>
            </div>
        </div>
    </div>
}


