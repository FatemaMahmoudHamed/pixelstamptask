@model string

@if (!String.IsNullOrEmpty(Model))
{
    var statusMessageClass ="danger";
    var statusMessageIcon ="remove";
    
    <div class="toasts-top-right fixed">
        <div class="toast bg-@statusMessageClass fade show" role="alert" aria-live="polite" aria-atomic="true">
            <div class="toast-header">
                <i class="mr-2 fas fa-@statusMessageIcon"></i>
                <strong class="mr-auto">Confirmation</strong><button  onclick="$(this).closest('.toast').toast('hide')" type="button" class="ml-2 mb-1 close" aria-label="Close"><span aria-hidden="true">×</span></button>
            </div>
            <div class="toast-body">@Model</div>
        </div>
    </div>

}

<script>
    setTimeout(function () {
        $('.toasts-top-right').fadeOut('slow');
    }, 1500);
</script>