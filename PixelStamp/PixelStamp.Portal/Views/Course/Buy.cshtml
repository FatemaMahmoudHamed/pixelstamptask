@model PixelStamp.Core.Dtos.CourseDto;


@{
    ViewData["Title"] = "Buy";
}

<h1>Delete</h1>

<h3>Are you sure you want to Buy this?</h3>
<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>

    <form asp-action="Buy">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Buy" class="btn btn-primary" /> |
        <a asp-action="Index" asp-route-allCourses="true">Back to List</a>
    </form>
</div>
