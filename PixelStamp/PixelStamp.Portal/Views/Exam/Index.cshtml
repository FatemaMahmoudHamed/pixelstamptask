@model IEnumerable<PixelStamp.Core.Entities.Exam>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (ViewBag.Role == "Teacher")
{
    <p>
        <a asp-action="Create" class="btn btn-dark">Create New</a>
    </p>
}
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course.Name)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.Questions)
                </th>*@

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>
            @*<td>
            @Html.DisplayNameFor(model => model.Questions.Count())
        </td>*@


            @if (ViewBag.Role == "Teacher")
            {
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-success">Delete</a>
                </td>
            }
            else
            {
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
                </td>
            }
        </tr>
        }
    </tbody>
</table>

<a asp-action="index" asp-controller="Course" asp-route-allCourses="true" class="btn btn-warning">Back to course</a>
