@model PixelStamp.Core.Entities.Exam;

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Exam</h4>
    <hr />
    <dl class="row">
        
        <dd class="col-sm-2">
            @Html.DisplayNameFor(model => model.Questions)
        </dd>
        <dd class="col-sm-10">
            <table cellpadding="0" cellspacing="0">
                @if (Model.Questions.Count() > 0)
                {
                    foreach (var file in Model.Questions)
                    {
                        <tr>
                            <td>
                                <u>
                                    @file.Text
                                </u>
                            </td>
                        </tr>
                    }
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" asp-route-courseId="@Model.CourseId">Back to List</a>
</div>
